<form method="post" action="/add">
  <div class="form-group">
    <label>Date</label>
    <input type="text" name="date" class="form-control" value="<%= new Date().getFullYear().toString() +'/'+ (new Date().getMonth() +1 ).toString() +'/'+ new Date().getDate().toString() %>">
  </div>
  <div class="form-group">
    <label class="d-block">Blood Pressure <span class="d-block float-right">60 mm Hg to 120/80 mm Hg</span></label>
    <input type="text" name="bp" class="form-control" >
  </div>
  <div class="form-group">
    <label>Weight</label>
    <input type="text" name="weight" class="form-control">
  </div>
  <div class="form-group">
    <label class="d-block">Pulse Rate<span class="d-block float-right">60 to 100 beats per minute</span></label>
    <input type="text" name="pulse" class="form-control">
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea name="comment" class="form-control"></textarea>
  </div>
  <button type="submit" class="form-control btn btn-success">Submit</button>
</form>

